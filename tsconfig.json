{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es3",
    "module": "commonjs",
    "removeComments": true,
    "checkJs": false,
    "allowJs": true,
    "lib": ["es2017", "es5", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
